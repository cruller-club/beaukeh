<% view_title 'Welcome!' %>

<% content_for :main do %>

    <canvas id="bokoup"></canvas>
    <script src="https://d3js.org/d3-random.v1.min.js"></script>
    <script>
        var canvas = document.querySelector("#bokoup"),
            context = canvas.getContext("2d");

        render();

        canvas.onclick = render;
        window.onresize = render;

        function render() {
            canvas.width = document.querySelector("main").clientWidth;
            canvas.height = canvas.width * (9/16);

            paletteCreator();
        }

        function paletteCreator() {
            console.log(d3.randomUniform(1,10));
        }
    </script>
<% end %>
